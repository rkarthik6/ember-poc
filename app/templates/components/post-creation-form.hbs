<div class="row formAlign">
<h3>Add New Post</h3>
<form class="col-sm-6 well">
	<div class="form-group">
		  <label for="example-text-input" class="col-2 col-form-label">Title</label>
		  <div class="col-10">
		    {{input class="form-control" type="text" value=title}}
		  </div>
	   </div>
	<div class="form-group">
	  <label for="example-search-input" class="col-2 col-form-label">Description</label>
	  <div class="col-10">
	    {{textarea  class="form-control" value=body rows="5"}}
	  </div>
	</div>
	<div class="pull-right">
	<button type="submit" class="btn btn-primary" {{action "addPost"}}>Submit</button>
	<button type="submit" class="btn btn-primary" {{action "cancel"}}>Cancel</button>
	</div>
</form>
</div>
{{yield}}